    <MatDrawerContainer Style="width: 100vw; height: 10vw">
        <MatDrawer @bind-Opened="@Opened" Style=" background-color: #610B0B; color: white;" Mode="@MatDrawerMode.Modal">
            
            <MatNavMenu @onclick="(e) => ButtonClicked()">
                <MatNavItem Style="color: white;" Href="/"><MatIcon Icon="home"></MatIcon>&nbsp; Home </MatNavItem>
                <MatDivider></MatDivider>
                <MatNavItem Style="color: white;" Href="/bankaccounts"><MatIcon Icon="timeline"></MatIcon>&nbsp; Bank Accounts </MatNavItem>                
